<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.near.sdk">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- region messages -->
        <service android:name=".Beacons.RegionIntentService" />

        <!-- MESSAGGI INGRESSO/USCITA DALLA REGION -->
        <receiver android:name="it.near.sdk.Beacons.RegionBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="it.near.sdk.permission.REGION_MESSAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
