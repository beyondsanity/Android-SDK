<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.near.sdk">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- region messages -->
        <service android:name=".Geopolis.Monitoring.RegionIntentService"
            android:exported="false"/>

        <!-- GCM registration -->

        <!-- push messages -->
        <!-- service that receives push from GCM and does internal SDK work -->
        <service
            android:name="it.near.sdk.Push.MyFcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- internal service to send local notifications -->
        <service android:name=".Push.FcmIntentService"
            android:exported="false"/>


        <receiver android:name=".Trackings.BluetoothStatusReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".Push.FCMRegistration.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>


    </application>

</manifest>
